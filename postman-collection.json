  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"email\":\"{{adminEmail}}\",\"password\":\"{{adminPassword}}\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "var data = pm.response.json();",
                  "pm.collectionVariables.set('token', data.token || '');",
                  "pm.test('Token recibido', function () {",
                  "  pm.expect(data.token).to.be.ok;",
                  "});"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Usuarios",
      "item": [
        {
          "name": "Crear usuario",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"nombre\":\"Test\",\"apellido\":\"Admin\",\"email\":\"{{createdUserEmail}}\",\"password\":\"Admin123!\",\"role\":\"admin\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          },
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const createdUserEmail = `test.admin.${Date.now()}@example.com`;",
                  "pm.collectionVariables.set('createdUserEmail', createdUserEmail);"
                ]
              }
            },
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Usuario creado', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Listar usuarios",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const users = pm.response.json();",
                  "const createdUserEmail = pm.collectionVariables.get('createdUserEmail');",
                  "const createdUser = Array.isArray(users) ? users.find((u) => u.email === createdUserEmail) : null;",
                  "pm.test('Usuario creado presente en listado', function () {",
                  "  pm.expect(createdUser).to.be.ok;",
                  "});",
                  "pm.collectionVariables.set('userId', createdUser ? String(createdUser.id) : '');"
                ]
              }
            }
          ]
        },
        {
          "name": "Obtener usuario",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        },
        {
          "name": "Actualizar usuario",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"nombre\":\"Test\",\"apellido\":\"Admin2\",\"email\":\"{{createdUserEmail}}\",\"role\":\"admin\"}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{userId}}"]
            }
          }
        }
      ]
